@model ForgotPasswordViewModel

@{
    Layout = null;
}
<!--
    <summary>
    Head section containing meta tags, title, and stylesheet links.
    </summary>
    -->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ourWinch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/ourWinch.styles.css" />

    <link href="/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Account/forgot_password-style.css" />
</head>

<body>
    <!--
    <summary>
    Defines the main body of the HTML document, primarily focused on the forgot password functionality.
    This section includes a container for the login interface with styling and form elements for user interaction.
    </summary>
    <returns>
    Provides a user interface for requesting a password reset and navigating back to the login page.
    </returns>
    -->
    <main class="container mt-5 text-center" style="max-width: 500px; border: 1px solid #ccc; background-color: #C0D0D7; padding: 20px; border-radius: 10px;">
        <div class="login-container">
            <div class="login-box">
                <div style="border: 2px solid black; display: inline-block; padding: 10px; margin-bottom: 15px;">
                    <i class="fas fa-lock" style="font-size: 24px;"></i>
                </div>

                <h6 class="font-weight-bold">Har du problemer med å logge på?</h6>
                <p class="font-weight-bold small">Skriv inn din email så sender vi deg en kode slik at du kan logge inn på kontoen din igjen.</p>
                <!--
                <summary>
                Form for submitting an email address to request a password reset link.
                </summary>
                <returns>
                Processes and sends the email data to the server for password reset functionality.
                </returns>
                -->
                <form asp-action="ForgotPassword" asp-controller="Account" method="post" role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group position-relative m-5 mb-1">
                        <i class="fas fa-user position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%);"></i>
                        <input type="email" class="form-control pl-5 text-center" id="Email" asp-for="Email" required placeholder="    Email">
                    </div>

                    <div class="form-group mt-4 mb-1 m-5">
                        <input type="submit" class="form-control pl-5 btn-outline-dark btn-bg-primary btn-block btn btn-hover" style="background-color: #4945F9; color: white; border-radius: 5px;" value="Send Innloggingskode">
                    </div>

                </form>

                <h4 style="font-size: 0.9rem;">ELLERS</h4>
                <!-- I wrapped the button inside an <a> tag and added a redirection function -->
                <a href="/">
                    <button class="btn mt-4" style="background-color: #4945F9; color: white; border-radius: 5px;">Fortsett til Login side</button>
                </a>
            </div>
        </div>

    </main>
</body>

<!--
<summary>
Section for including client-side validation scripts.
This section references a partial view that contains the necessary JavaScript for form validation.
</summary>
<returns>
Loads and applies client-side validation scripts to the forms in the view, enhancing user experience by providing immediate feedback on input errors.
</returns>
-->
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

