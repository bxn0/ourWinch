@model LoginViewModel


@{
Layout = null;
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/ourWinch.styles.css" />

    <link href="/docs/4.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Account/login-style.css" />
    <script src=" https://cdn.jsdelivr.net/npm/sweetalert2@11.9.0/dist/sweetalert2.all.min.js "></script>

    <title>@(ViewBag.Title) Nøsted & AS </title>


    <!-- The code for adding a favicon -->
    <link rel="icon" type="image/png" href="~/img/logo.png" />

</head>

<body>

    <main class="container mt-6 text-center">
        <div class="login-container text-center">
            <div class="login-box">
                <img class="logo-image" src="/img/nøsted2.jpeg" alt="nøsted Logo" />

                <h2 class="text-center mb-2 font-weight-bold">Login</h2>
                <p class="text-center mb-5">Logg på kontoen din</p>
                
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Username input -->
                    <div class="form-group position-relative m-4">
                        <i class="fas fa-user position-absolute"></i>
                        <input type="mobil" class="form-control pl-5" id="mobil" asp-for="Mobilno" required placeholder="Mobil No">
                    </div>

                    <!-- Password input -->
                    <div class="form-group position-relative m-4">
                        <i class="fas fa-key position-absolute"></i>
                        <input type="password" class="form-control pl-5 rounded-lg" id="Password" asp-for="Password" required placeholder="Password">
                    </div>
                    <div class="form-group">
                        <div class=" col-md-10">
                            <div class="custom-checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe"/>
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <!-- Submit button -->
                    <div class="form-group mt-4 mb-1 m-4 text-center">
                        <input type="submit" class="form-control pl-5 btn-outline-dark btn-bg-primary btn-block btn btn-hover text-white" style="background-color: #4945F9;" value="Login">
                    </div>

                    <div class="text-right mb-5 me-4">
                        <a asp-controller="Account" asp-action="ForgotPassword">Jeg glemte passordet mitt</a>
                    </div>

                </form>
            }
            </div>
        </div>
    </main>

</body>
