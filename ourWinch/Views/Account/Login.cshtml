@model LoginViewModel


<style>
    body, html {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        width: 100%;
        margin: 0 auto;
        padding: 0 15px;
        box-sizing: border-box;
    }

    .login-container {
        max-width: 350px;
        margin: auto;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .login-box {
        border: 2px solid #000;
        padding: 25px;
        box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.3);
        border-radius: 8px;
        background-color: #C0D0D7;
    }

    .login-header {
        background-color: black !important;
        color: white !important;
        padding: 1px 2px !important;
        font-size: 26px;
        border-radius: 6px;
        text-align: center;
    }

    input.form-control, button.btn-outline-dark {
        background-color: #f5f5f5;
    }

    .form-group.position-relative:not(:last-child) {
        margin-bottom: 20px;
    }

    .form-group i {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
    }

    input.form-control {
        padding-left: 35px;
    }

    .form-group input.btn-outline-dark {
        text-align: center;
        color: white;
        background-color: black;
        border: none;
    }

    .text-right a {
        float: right;
        color: black !important;
        text-decoration: none;
        display: inline-block;
    }

    .form-group button.btn-outline-dark {
        font-size: 18px !important;
        background-color: #f5f5f5 !important;
        border: none !important;
        color: black !important;
        height: 38px;
    }
</style>



<main class="container mt-6 text-center">
    <div class="login-container">
        <div class="login-box">
            <button class="login-header text-center mb-3 text-secondary ">
                nøsted
            </button>

            <!-- Yeni eklenen başlıklar -->
            <h2 class="text-center mb-2 font-weight-bold">Login</h2>
            <p class="text-center mb-5">Logg på kontoen din</p>

            <form asp-action="Login" asp-controller="Account" method="post">
                <!-- Username input -->
                <div class="form-group position-relative">
                    <i class="fas fa-user position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%);"></i>
                    <input type="mobil" class="form-control pl-5" id="mobil" asp-for="Mobil" required placeholder="Mobil No">
                </div>

                <!-- Password input -->
                <div class="form-group position-relative">
                    <i class="fas fa-key position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%);"></i>
                    <input type="password" class="form-control pl-5 rounded-lg" id="Password" asp-for="Password" required placeholder="Password">
                </div>
                <!-- Submit button -->
                <div class="form-group mt-4 mb-1">
                    <input type="submit" class="form-control pl-5 btn-outline-dark btn-block btn btn-hover" value="Login">
                </div>

                <div class="text-right">
                    <a href="#">Jeg glemte passordet mitt</a>
                </div>

                <div class="form-group mt-5">
                    <input type="submit" class="form-control pl-5 btn-outline-dark btn-block bg-p" value="Register New Account">
                </div>
            </form>
        </div>
    </div>
</main>