@model ResetPasswordViewModel

<!-- Stil kodu -->

<main class="container mt-6 text-center">
    <div class="login-container">
        <div class="login-box">
            <img class="logo-image" src="/img/nøsted2.jpeg" alt="nøsted Logo" />

            <h2 class="text-center mb-2 font-weight-bold">Sett nytt passord</h2>
            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                <div class="form-group position-relative m-4">
                    <i class="fas fa-lock position-absolute"></i>
                    <input type="password" class="form-control pl-5" id="newPassword" asp-for="NewPassword" required placeholder="Nytt Passord">
                </div>

                <div class="form-group position-relative m-4">
                    <i class="fas fa-lock position-absolute"></i>
                    <input type="password" class="form-control pl-5" id="confirmPassword" asp-for="ConfirmPassword" required placeholder="Gjenta Passord">
                </div>

                <div class="form-group mt-4 mb-1 m-4">
                    <input type="submit" class="form-control pl-5 btn-outline-dark btn-bg-primary btn-block btn btn-hover" value="Bekreft og logg på">
                </div>
            </form>
        </div>
    </div>
</main>

