@model ResetPasswordViewModel

<!-- Stil kodu -->

<style>
    .login-container {
        max-width: 500px;
        border: 1px solid #ccc;
        background-color: #C0D0D7;
        padding: 20px;
        border-radius: 10px;
        margin: auto; /* Sayfayı ortalama */
    }

    .code-input {
        flex: 1;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-right: none;
    }

    .send-label {
        padding: 6px 12px;
        background-color: #4945F9;
        color: white;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
        display: flex;
        align-items: center;
        cursor: pointer;
    }
</style>

<main class="container mt-5 text-center">
    <div class="login-container">
        <div class="login-box">

            <!-- Kilit simgesi -->
            <div style="border: 2px solid black; display: inline-block; padding: 10px; margin-bottom: 15px;">
                <i class="fas fa-lock" style="font-size: 24px;"></i>
            </div>

            <h2 class="text-center mb-2 font-weight-bold">Sett nytt passord</h2>

            <!-- Açıklama -->
            <p class="font-weight-bold small">For å tilbakestille passordet ditt, vennligst fyll inn nedenstående felt</p>

            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                <!-- Nytt Passord input -->
                <div class="form-group position-relative m-5 mb-4">
                    <i class="fas fa-key position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%);"></i>
                    <input type="password" class="form-control pl-5 text-center" id="newPassword" asp-for="NewPassword" required placeholder="Nytt Passord">
                </div>

                <!-- Gjenta Passord input -->
                <div class="form-group position-relative m-5 mt-2 mb-4">
                    <i class="fas fa-key position-absolute" style="left: 10px; top: 50%; transform: translateY(-50%);"></i>
                    <input type="password" class="form-control pl-5 text-center" id="confirmPassword" asp-for="ConfirmPassword" required placeholder="Gjenta Passord">
                </div>

                <!-- Bekreft og logg på input -->
                <div class="form-group m-5 mt-5 mb-4">
                    <input type="submit" class="form-control pl-5 btn-outline-dark btn-bg-primary btn-block btn btn-hover" style="background-color: #4945F9; color: white; border-radius: 5px;" value="Bekreft og logg på">
                </div>
            </form>
        </div>
    </div>
</main>

<script>
    function checkPasswords() {
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (newPassword === confirmPassword) {
            window.location.href = "/login";  // Burada "/login" login sayfanızın URL'sidir. Doğru URL ile değiştirin.
            return false;  // formun gönderilmesini engelliyoruz, sadece yönlendirme yapıyoruz
        }

        alert("Passordene samsvarer ikke!");  // Şifreler eşleşmiyorsa bir uyarı gösteriyoruz
        return false;  // formun gönderilmesini engelliyoruz
    }
</script>

<!-- ... -->

<form asp-action="ResetPassword" asp-controller="Account" method="post" onsubmit="return checkPasswords();">
    <!-- ... diğer form elemanları ... -->
</form>

