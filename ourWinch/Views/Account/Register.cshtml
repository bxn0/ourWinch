@model ourWinch.Models.Account.RegisterViewModel

@{
    var isAdmin = User.IsInRole("Admin");
}

@if(isAdmin) {

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registrering</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
     
<form asp-controller="Account" asp-action="Register" method="post" role="form">
        <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container mt-5" style="background-color: #C0D0D7; max-width: 800px; border-radius: 10px; padding: 20px">
        <div class="row justify-content-center">
            <div class="col-12 text-center my-3">
                <img class="logo-image rounded" src="/img/nøsted2.jpeg" alt="nøsted Logo" width="200" style="border-radius: 5px;">
                <h2 class="font-weight-bold mt-4" style="font-size: 2em; font-weight: 600;">Registrering</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <!-- Left Section -->
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" asp-for="Fornavn" class="form-control form-control-sm rounded-input text-danger" placeholder="Fornavn" id="fornavnInput">
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Etternavn" class="form-control form-control-sm text-danger" placeholder="Etternavn" id="etternavnInput">
                </div>
                <div class="form-group">
                    <input type="tel" asp-for="MobilNo" class="form-control form-control-sm" placeholder="Mobil No" id="mobilNoInput">
                </div>
            </div>

            <!-- Right Section -->
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" asp-for="MellomNavn" class="form-control form-control-sm text-danger" placeholder="Mellom navn" id="mellomNavnInput">
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Email" class="form-control form-control-sm text-danger" placeholder="Email" id="emailInput">
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control form-control-sm text-danger" placeholder="Password" id="password">
                </div>
                <div class="form-group">
                    <select id="inputState" asp-for="Role" class="form-select form-control form-control-sm text-danger">
                        <option deselected>Velg en</option>
                        <option>Admin</option>
                            <option>Ansatt</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end mt-8">
            <button type="submit" class="btn btn-success" id="registerButton">Register</button>
        </div>
    </div>

</form>
</body>

}
