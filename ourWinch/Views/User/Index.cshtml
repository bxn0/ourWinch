@model IEnumerable<ourWinch.Models.Account.ApplicationUser>

@{

    ViewBag.Title = "Brukere";

}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>


<!-- Main container for the user list -->
<div class="container mt-5" style="background-color: #C0D0D7; max-width: 800px; border-radius: 10px; padding: 20px; height: 500px; overflow-y: auto;">
    <div class="row justify-content-center">
        
        <!-- Main container for the user list -->
        <div class="col-12 text-center my-3">
            <img class="logo-image rounded" src="/img/nøsted2.jpeg" alt="nøsted Logo" width="200" style="border-radius: 10px;">
            <h2 class="font-weight-bold mt-4" style="font-size: 2em; font-weight: 600;">User List</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12">
            
            <!-- Check if there are any users to display -->
            @if (Model.Count() > 0)
            {

                <!-- Table to display user details -->
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            Fornavn
                        </th>
                        <th>
                            Etternavn
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Roles
                        </th>
                        <th></th>
                    </tr>
                    
                    <!-- Loop through each user and display their details -->
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Fornavn
                            </td>
                            <td>
                                @item.Etternavn
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Role
                            </td>
                            <td>
                                <div >
                                    
                                    <!-- Form for deleting the user -->
                                    <form asp-action="Delete" asp-route-userId="@item.Id">
                                        <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                            Rediger
                                        </a>

                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                                class="btn btn-danger">
                                            Slett
                                        </button>

                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>