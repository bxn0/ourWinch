<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS ve bağımlılıkları -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- FontAwesome (ikonlar için) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

    <link rel="stylesheet" href="~/css/_Layout.css" />
</head>
<body>
    <!-- Navbar Kısmı -->
    <nav class="navbar navbar-dark bg-dark flex-md-nowrap p-1 shadow">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">
            <img class="logo-image" src="/img/nøsted2.jpeg" alt="nøsted Logo" />
        </a>
        <div class="search-wrapper ml-7 position-relative">
            <input class="form-control form-control-dark" type="text" placeholder="Search" aria-label="Search">
            <i class="fa fa-search search-icon position-absolute"></i>
        </div>

        <div class="user-info d-flex align-items-center ml-auto mr-5">
            <i class="fas fa-bell text-white mr-3"></i>
            <span class="text-white mr-2">Lars Olsen</span>
            <i class="fas fa-user text-white"></i>
        </div>
    </nav>

    <!-- Sidebar Kısmı -->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column mb-3">
                        <li class="nav-item text-center">
                            <i class="fas fa-icon-name"></i>
                            <hr>
                        </li>
                        <li class="nav-item text-center my-3">
                            <hr>
                            <a class="nav-link" href="#">
                                <i class="fas fa-home"></i> Hjem
                            </a>
                            <hr>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="nav-link" href="#">
                                <i class="fas fa-cogs"></i> Aktive Servicer
                            </a>
                        </li>
                        <!-- ... diğer menü öğeleri ... -->
                    </ul>
                </div>
            </nav>

            <!-- İçerik Kısmı -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 mt-5">
                <div class="dashboard-text text-center">
                    Dashboard - Active Services
                </div>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
