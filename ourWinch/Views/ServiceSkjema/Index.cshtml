<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Kontrol Sayfası</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h4>Nøsted & avd. Jåbæk</h4>
                <p>Kvalitetssikring Registreringer</p>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-primary">Skriv ut</button>
            </div>
        </div>

        <!-- Eklenen Form Başlangıç -->
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Servis Ordre ID" id="serviceOrdreIdInput">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" id="lastInnData">Yükle</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Eklenen Form Bitiş -->

        <div class="row mt-3">
            <div class="col-md-6">
                <label>Godkjent av:</label>
                <input type="text" class="form-control">
            </div>
            <div class="col-md-3">
                <label>Dato:</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-md-3">
                <label>Type:</label>
                <select class="form-control">
                    <option value="Ny">Ny</option>
                    <!-- Diğer seçenekler buraya eklenebilir -->
                </select>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Avdeling</th>
                            <th>Sjekk punkter</th>
                            <th>OK</th>
                            <th>Bør skiftes</th>
                            <th>Defekt</th>
                        </tr>
                    </thead>
                    <tbody id="dataBody">
                        <!-- Dinamik olarak buraya satırlar eklenecek -->
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label>Signatur:</label>
                <input type="text" class="form-control">
            </div>
            <div class="col-md-4">
                <label>Dato:</label>
                <input type="date" class="form-control">
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {

            $("#lastInnData").click(function () {
                var serviceOrdreId = $("#serviceOrdreIdInput").val();

                if (serviceOrdreId) {
                    fetchServiceData(serviceOrdreId);
                } else {
                    alert("Vennligst skriv inn en service ordre ID.");
                }
            });

            // Eğer serviceSkjemaLink sınıfını kullandıysanız bu kısmı kullanın
            $(".serviceSkjemaLink").click(function (e) {
                e.preventDefault();
                var orderId = $(this).data("id");
                fetchServiceData(orderId);
            });

        });

        function fetchServiceData(orderId) {
            var apiUrl = "/api/ServiceSkjema/" + orderId;

            $.ajax({
                url: apiUrl,
                method: "GET",
                success: function (data) {
                    var tableBody = $("#dataBody");
                    tableBody.empty();

                    data.forEach(item => { // "data" kullanıldı, "data.items" değil.
                        var row = `<tr>
                                           <td>${item.Avdeling}</td>
                                           <td>${item.SjekkPunkter}</td>
                                           <td><input type="checkbox" ${item.OK ? 'checked' : ''}></td>
                                           <td><input type="checkbox" ${item.BørSkiftes ? 'checked' : ''}></td>
                                           <td><input type="checkbox" ${item.Defekt ? 'checked' : ''}></td>
                                       </tr>`;
                        tableBody.append(row);
                    });
                },
                error: function (error) {
                    console.log("Det oppsto en feil: ", error);
                    alert("Bir hata oluştu! Lütfen tekrar deneyiniz.");
                }
            });
        }
    </script>
</body>
</html>