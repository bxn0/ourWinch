<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Kontrol Sayfası</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <h4>Nøsted & avd. Jåbæk</h4>
                <p>Kvalitetssikring Registreringer</p>
            </div>
            <div class="col-md-6 text-right">
                <button class="btn btn-primary">Skriv ut</button>
            </div>
        </div>

        <!-- Eklenen Form Başlangıç -->
        <div class="row mt-3">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Servis Ordre ID" id="serviceOrdreIdInput">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" id="lastInnData">Yükle</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Eklenen Form Bitiş -->

        <div class="row mt-3">
            <div class="col-md-6">
                <label>Godkjent av:</label>
                <input type="text" class="form-control">
            </div>
            <div class="col-md-3">
                <label>Dato:</label>
                <input type="date" class="form-control">
            </div>
            <div class="col-md-3">
                <label>Type:</label>
                <select class="form-control">
                    <option value="Ny">Ny</option>
                    <!-- Diğer seçenekler buraya eklenebilir -->
                </select>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Avdeling</th>
                            <th>Sjekk punkter</th>
                            <th>OK</th>
                            <th>Bør skiftes</th>
                            <th>Defekt</th>
                        </tr>
                    </thead>
                    <tbody id="dataBody">
                        <!-- Dinamik olarak buraya satırlar eklenecek -->
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label>Signatur:</label>
                <input type="text" class="form-control">
            </div>
            <div class="col-md-4">
                <label>Dato:</label>
                <input type="date" class="form-control">
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {

            // Sayfa yüklendiğinde otomatik olarak data yüklensin
            fetchServiceData(17);  // Burada varsayılan olarak "17" id'sini kullandım.

            $("#lastInnData").click(function () {
                var serviceOrdreId = $("#serviceOrdreIdInput").val();

                if (serviceOrdreId) {
                    fetchServiceData(serviceOrdreId);
                } else {
                    alert("Vennligst skriv inn en service ordre ID.");
                }
            });

            // I removed the auto-loading of default data for clarity.
        });

        function fetchServiceData(orderId) {
            // Örnek veri yapısnı güncelledim
            var data = {
                Mechanicals: [{
                    id: 36,
                    serviceOrderId: 16,
                    ordernummer: 230006,
                    checklistItem: 'Mekanik kontrol',
                    ok: true
                }],
                Hydrolisks: [{
                    id: 37,
                    serviceOrderId: 16,
                    ordernummer: 230007,
                    checklistItem: 'Hidrolik sızdırmazlık kontrolü',
                    ok: false
                }],
                Electros: [{
                    id: 35,
                    serviceOrderId: 16,
                    ordernummer: 230005,
                    checklistItem: 'Sjekk ledningsnett på vinsj',
                    ok: true
                }, {
                    id: 38,
                    serviceOrderId: 16,
                    ordernummer: 230008,
                    checklistItem: 'Elektrik bağlantı kontrolü',
                    ok: false
                }],
                FunksjonsTests: [],
                Trykks: []
            };

            var tableBody = $("#dataBody");
            tableBody.empty();

            // Kategorilerin isimlerini tanımlıyoruz
            var mappings = {
                Mechanicals: "Mekanik",
                Hydrolisks: "Hidrolik",
                Electros: "Elektrik",
                FunksjonsTests: "Fonksiyon Testi",
                Trykks: "Basınç Testi"
            };

            for (var key in mappings) {
                if (data[key] && data[key].length) {
                    appendDataToTable(data[key], tableBody, mappings[key]);
                }
            }
        }

        function appendDataToTable(dataList, tableBody, avdeling) {
            dataList.forEach(item => {
                var okChecked = item.ok ? 'checked' : '';
                var borSkiftesChecked = !item.ok ? 'checked' : '';
                // Not: Defekt sütununun ne zaman işaretleneceğine dair bir bilgi verilmediği için şimdilik boş bırakıyorum. Gerekirse aşağıdaki satırı düzenleyebilirsiniz.
                var defektChecked = '';

                var row = `<tr>
                              <td>${avdeling}</td>
                              <td>${item.checklistItem}</td>
                              <td><input type="checkbox" ${okChecked}></td>
                              <td><input type="checkbox" ${borSkiftesChecked}></td>
                              <td><input type="checkbox" ${defektChecked}></td>
                           </tr>`;
                tableBody.append(row);
            });
        }

    </script>
</body>
</html>
