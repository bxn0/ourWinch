<div class="container mt-5" style="background-color: #C0D0D7;">
    <div class="row justify-content-center">
        <div class="col-12 text-center my-3">
            <img class="logo-image" src="/img/nøsted2.jpeg" alt="nøsted Logo">
            <h2 class="font-weight-bold">Ny Service</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Sol Bölüm -->
        <div class="col-md-6">
            <div class="form-group">
                <label class="text-dark">Fornavn</label>
                <input type="text" class="form-control" placeholder="Fornavn">
            </div>

            <div class="form-group">
                <label class="text-dark">Etternavn</label>
                <input type="text" class="form-control" placeholder="Etternavn">
            </div>

            <div class="form-group">
                <label class="text-dark">Mobil No</label>
                <input type="tel" class="form-control" placeholder="Mobil No">
            </div>

            <div class="form-group">
                <label class="text-dark">Email</label>
                <input type="email" class="form-control" placeholder="Email">
            </div>

            <div class="form-group">
                <label class="text-dark">Adresse</label>
                <input type="text" class="form-control" placeholder="Adresse">
            </div>

            <div class="form-group">
                <label class="text-dark">Feilbeskrivelse</label>
                <textarea class="form-control" rows="5" placeholder="Feilbeskrivelse"></textarea>
            </div>
        </div>

        <!-- Sağ Bölüm -->
        <div class="col-md-6">
            <div class="form-group">
                <label class="text-dark">Ordrenummer</label>
                <input type="text" class="form-control" placeholder="Ordrenummer">
            </div>

            <div class="form-group">
                <label class="text-dark">Produkttype</label>
                <input type="text" class="form-control" placeholder="Produkttype">
            </div>

            <div class="form-group">
                <label class="text-dark">Serienummer</label>
                <input type="text" class="form-control" placeholder="Serienummer">
            </div>

            <div class="form-group d-flex align-items-center">
                <div class="mr-2">
                    <label class="text-dark">Mottatt Dato</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="20.09.2023">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="ml-2">
                    <label class="text-dark">Årsmodell</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="2021">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-caret-down"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <div style="background-color: white; border: 1px solid #6DDA6B; border-radius: 50%;" class="p-2 mr-2"></div>
                    <label>Garanti</label>
                </div>

                <div class="d-flex align-items-center">
                    <div style="background-color: white; border: 1px solid #6DDA6B; border-radius: 50%;" class="p-2 mr-2"></div>
                    <label>Servis</label>
                </div>

                <div class="d-flex align-items-center">
                    <div style="background-color: #6DDA6B; border-radius: 50%;" class="p-2 mr-2"></div>
                    <label>Reperasjon</label>
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Kommentar Fra Kunde</label>
                <textarea class="form-control" rows="5" placeholder="Kommentar Fra Kunde"></textarea>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-12 text-center my-4">
            <button class="btn" style="background-color: #4945F9; color: #fff;">Send</button>
        </div>
    </div>
</div>
