<style>
    /* Sample styling (customize as needed) */
    .statistics-wrapper {
        display: flex;
        justify-content: space-between;
    }

    .stat-item {
        display: flex;
    }

    .kunde-wrapper {
        margin-top: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    .status-active {
        color: green;
    }

    .status-inactive {
        color: red;
    }

    .pagination-wrapper {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .active-page {
        color: blue;
        font-weight: bold;
    }
</style>

<div class="container">
    <!-- Kunde Statistics -->
    <div class="statistics-wrapper">
        <!-- ... Your statistics components ... -->
    </div>

    <!-- Kunde Table -->
    <div class="kunde-wrapper">
        <h2>Kunder</h2>
        <form method="get" action="@Url.Action("Dashboard", "Customers")">
            <div class="search-wrapper">
                <input type="search" name="query" placeholder="Search" />
                @* <select name="filter">
                     <option value="name"></option> 
                    <!-- Other options -->
                </select> *@
                <button type="submit">Search</button>
            </div>
        </form>

        @model List<ourWinch.Models.Dashboard.ServiceOrder>

        <table>
            <thead>
                <tr>
                    <th>Kunde Navn</th>
                    <th>Etter Navn</th>
                    <th>Tlf Nummer</th>
                    <th>Email</th>
                    <th>Adress</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Fornavn</td>
                        <td>@order.Etternavn</td>
                        <td>@order.MobilNo</td>
                        <td>@order.Email</td>
                        <td>@order.Adresse</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- Pagination -->
        <div class="pagination-wrapper">
            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <span class="active-page">@i</span>
                }
                else
                {
                    <a href="@Url.Action("Dashboard", "Customers", new { page = i })">@i</a>
                }
            }
        </div>
    </div>
</div>
