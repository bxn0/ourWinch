<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registrering</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5" style="background-color: #C0D0D7; max-width: 800px; border-radius: 10px;">
        <div class="row justify-content-center">
            <div class="col-12 text-center my-3">
                <img class="logo-image rounded" src="/img/nøsted2.jpeg" alt="nøsted Logo" width="200" style="border-radius: 5px;">
                <h2 class="font-weight-bold mt-4" style="font-size: 2em; font-weight: 600;">Registrering</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <!-- Left Section -->
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm rounded-input" placeholder="Fornavn" id="fornavnInput">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm" placeholder="Etternavn" id="etternavnInput">
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control form-control-sm" placeholder="Mobil No" id="mobilNoInput">
                </div>
            </div>

            <!-- Right Section -->
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm" placeholder="Mellom navn" id="mellomNavnInput">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control form-control-sm" placeholder="Email" id="emailInput">
                </div>
                <div class="form-group">
                    <select id="inputState" class="form-select form-control form-control-sm">
                        <option selected>Ansatt...</option>
                        <option>Admin</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-8">
            <button type="button" class="btn btn-primary" id="registerButton">Register</button>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
    document.getElementById("registerButton").addEventListener("click", function () {
        const fornavn = document.getElementById("fornavnInput").value;
        const etternavn = document.getElementById("etternavnInput").value;
        const mobilNo = document.getElementById("mobilNoInput").value;
        const mellomNavn = document.getElementById("mellomNavnInput").value;
        const email = document.getElementById("emailInput").value;

// You can register using this information
        console.log("Fornavn: " + fornavn);
        console.log("Etternavn: " + etternavn);
        console.log("Mobil No: " + mobilNo);
        console.log("Mellom Navn: " + mellomNavn);
        console.log("Email: " + email);
    });
</script>
</body>
</html>