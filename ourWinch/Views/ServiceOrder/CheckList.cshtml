    <script>
        function showForm(formId) {
            ['form1', 'form2', 'form3', 'form4', 'form5'].forEach(function (id) {
                document.getElementById(id).style.display = (id === formId) ? 'flex' : 'none';
            });
        }

        //************************************************* */
        function addItem(formId) {
            let inputDiv;
            let userInputField;
            let inputRow;

            switch (formId) {
                case 'form1':
                    inputDiv = document.getElementById("inputDiv1");
                    userInputField = document.getElementById('userInput1');
                    inputRow = document.getElementById("inputRow1");
                    break;
                case 'form2':
                    inputDiv = document.getElementById("inputDiv2");
                    userInputField = document.getElementById('userInput2');
                    inputRow = document.getElementById("inputRow2");
                    break;
                // ... diğer formlar için benzer yapılar eklenebilir.
            }

            inputDiv.style.display = "flex";

            // Kullanıcıdan alınan girdiyi oku
            
            let labelText = userInputField.value;

            if (labelText === '') return; // Eğer boşsa işlem yapma

            // Yeni bir element oluştur
            let newItem = document.createElement('div');
            newItem.classList.add('col-md-12', 'd-flex', 'align-items-center');

            newItem.innerHTML = `
        <div class="col-md-6">
            <label style="word-wrap: break-word;max-width: 100%;" for=${labelText}>${labelText}</label>
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="${labelText}" value="OK">
                <label class="form-check-label">OK</label>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="${labelText}" value="Bør skiftes">
                <label class="form-check-label">Bør skiftes</label>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="${labelText}" value="Defekt">
                <label class="form-check-label">Defekt</label>
            </div>
        </div>
    `;

            // Oluşturulan elementi formda inputRow'un hemen üstüne ekle
            inputRow.parentNode.insertBefore(newItem, inputRow);
            userInputField.value = '';
        }
        




